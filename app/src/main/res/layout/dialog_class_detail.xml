<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_dialog_class_name"
        android:text="class name"
        android:textSize="17sp"
        android:textColor="@color/color_green"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_dialog_class_id"
        android:text="id"
        android:textSize="15sp"
        android:textColor="@color/color_blue"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_dialog_class_lecturer"
        android:text="lecturer"
        android:textColor="@color/color_black"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_dialog_class_sum_slot"
        android:text="sum slot"
        android:textColor="@color/color_black"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_dialog_class_start"
        android:text="from"
        android:textColor="@color/color_red"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_dialog_class_end"
        android:text="to"
        android:textColor="@color/color_red"
        android:padding="5dp"/>

</LinearLayout>