<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edt_current_password"
                android:maxLines="1"
                android:inputType="textPassword"
                android:hint="current password"
                android:padding="10dp"
                android:background="@null"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edt_new_password"
                android:maxLines="1"
                android:inputType="textPassword"
                android:hint="new password"
                android:padding="10dp"
                android:layout_toEndOf="@+id/tv_dialog_password_current_confirm"
                android:background="@null"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edt_confirm_new_password"
                android:maxLines="1"
                android:inputType="textPassword"
                android:hint="retype new password"
                android:padding="10dp"
                android:background="@null" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_light_grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_password_cancel"
                    android:text="Cancel"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/color_light_grey"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_password_save"
                    android:text="Save"
                    android:textSize="16dp"
                    android:textColor="@color/color_blue"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>