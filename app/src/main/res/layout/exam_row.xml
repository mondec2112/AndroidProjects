<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/color_background_grey"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_blue"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_exam_subject_name"
                    android:text="tv_exam_subject_name"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_exam_subject_id"
                    android:text="tv_exam_subject_id"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_light_orange"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_exam_date"
                    android:text="tv_exam_date"
                    android:textStyle="bold"
                    android:textColor="@color/color_white"
                    android:padding="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_exam_start_hour"
                    android:text="tv_exam_start_hour"
                    android:textStyle="bold"
                    android:textColor="@color/color_white"
                    android:padding="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_exam_num_minute"
                    android:text="tv_exam_num_minute"
                    android:textStyle="bold"
                    android:textColor="@color/color_white"
                    android:padding="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_exam_room"
                    android:text="tv_exam_room"
                    android:textStyle="bold"
                    android:textColor="@color/color_white"
                    android:padding="2dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_exam_quantity"
                android:text="tv_exam_quantity"
                android:textStyle="bold"
                android:textColor="@color/color_grey"
                android:padding="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_exam_combined"
                android:text="tv_exam_combined"
                android:textStyle="bold"
                android:textColor="@color/color_grey"
                android:padding="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_exam_team"
                android:text="tv_exam_team"
                android:textStyle="bold"
                android:textColor="@color/color_grey"
                android:padding="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_exam_week"
                android:text="tv_exam_week"
                android:textStyle="bold"
                android:textColor="@color/color_grey"
                android:padding="2dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>